{
    "name": "veda",
    "main": "./lib/index",
    "version": "2.14.3",
    "description": "VJ / Live Coding environment with GLSL",
    "keywords": [],
    "activationCommands": {
        "atom-workspace": "veda:toggle"
    },
    "repository": "https://github.com/fand/veda",
    "license": "MIT",
    "engines": {
        "atom": ">=1.0.0 <2.0.0"
    },
    "dependencies": {
        "atom-message-panel": "^1.3.0",
        "atom-package-deps": "^8.0.0",
        "execa": "5.1.1",
        "express": "^4.17.3",
        "ffmpeg-static": "^5.0.0",
        "glslang-validator-prebuilt": "^0.0.7",
        "glslify-lite": "^0.0.7",
        "is-relative": "^1.0.0",
        "json5": "^2.2.1",
        "lodash": "^4.17.21",
        "mkdirp": "^1.0.4",
        "osc-min": "^1.1.1",
        "pify": "^5.0.0",
        "rimraf": "^3.0.2",
        "signal-exit": "^3.0.7",
        "socket.io": "^4.4.1",
        "socket.io-client": "^4.4.1",
        "three": "0.135",
        "tmp": "^0.2.1",
        "vedajs": "^0.16.0",
        "which": "^2.0.2"
    },
    "package-deps": [
        "language-glsl",
        "linter-glslify",
        "autocomplete-glsl"
    ],
    "devDependencies": {
        "@ava/babel": "^2.0.0",
        "@babel/core": "7.17.8",
        "@babel/polyfill": "7.12.1",
        "@babel/preset-env": "7.16.11",
        "@types/atom": "1.40.11",
        "@types/execa": "2.0.0",
        "@types/express": "4.17.13",
        "@types/json5": "2.2.0",
        "@types/lodash": "4.14.180",
        "@types/mkdirp": "1.0.2",
        "@types/offscreencanvas": "^2019.6.4",
        "@types/pify": "5.0.1",
        "@types/socket.io": "3.0.2",
        "@types/socket.io-client": "3.0.0",
        "@types/three": "0.135",
        "@types/tmp": "0.2.3",
        "@types/which": "2.0.1",
        "@typescript-eslint/eslint-plugin": "5.15.0",
        "@typescript-eslint/parser": "5.15.0",
        "all-contributors-cli": "6.20.0",
        "ava": "4.1.0",
        "eslint": "8.11.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^7.0.0",
        "lint-staged": "12.3.7",
        "npm-run-all": "4.1.5",
        "path-browserify": "^1.0.1",
        "prettier": "2.6.0",
        "ts-loader": "9.2.8",
        "typescript": "4.6.2",
        "webpack": "5.70.0",
        "webpack-cli": "4.9.2"
    },
    "scripts": {
        "ci": "run-p lint test build",
        "test": "ava --verbose",
        "lint": "eslint 'src/**/*.ts'",
        "dev": "run-s watch",
        "build": "run-p build:ts build:client",
        "build:ts": "tsc",
        "build:client": "webpack --mode production",
        "watch": "run-p watch:ts watch:client",
        "watch:ts": "tsc -w",
        "watch:client": "webpack -w --mode development",
        "contributors:add": "all-contributors add",
        "contributors:generate": "all-contributors generate",
        "prepare": "husky install",
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix 'src/**/*.ts'"
        ],
        "*.md": [
            "prettier --write"
        ]
    },
    "ava": {
        "babel": true
    }
}
