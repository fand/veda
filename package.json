{
    "name": "veda",
    "main": "./lib/index",
    "version": "2.14.3",
    "description": "VJ / Live Coding environment with GLSL",
    "keywords": [],
    "activationCommands": {
        "atom-workspace": "veda:toggle"
    },
    "repository": "https://github.com/fand/veda",
    "license": "MIT",
    "engines": {
        "atom": ">=1.0.0 <2.0.0"
    },
    "dependencies": {
        "atom-message-panel": "^1.3.0",
        "atom-package-deps": "^5.1.0",
        "execa": "4.0.1",
        "express": "^4.17.1",
        "ffmpeg-static": "^4.2.2",
        "glslang-validator-prebuilt": "^0.0.6",
        "glslify-lite": "^0.0.7",
        "is-relative": "^1.0.0",
        "json5": "^2.1.0",
        "lodash": "^4.17.11",
        "mkdirp": "^1.0.4",
        "osc-min": "^1.1.1",
        "pify": "^5.0.0",
        "rimraf": "^3.0.2",
        "signal-exit": "^3.0.2",
        "socket.io": "^2.2.0",
        "socket.io-client": "^2.2.0",
        "three": "^0.122.0",
        "tmp": "^0.2.1",
        "vedajs": "^0.15.0",
        "which": "^2.0.2"
    },
    "package-deps": [
        "language-glsl",
        "linter-glslify",
        "autocomplete-glsl"
    ],
    "devDependencies": {
        "@ava/babel": "^1.0.1",
        "@babel/core": "7.9.6",
        "@babel/polyfill": "7.8.7",
        "@babel/preset-env": "7.9.6",
        "@types/atom": "1.40.4",
        "@types/execa": "2.0.0",
        "@types/express": "4.17.6",
        "@types/json5": "0.0.30",
        "@types/lodash": "4.14.152",
        "@types/mkdirp": "1.0.0",
        "@types/pify": "3.0.2",
        "@types/socket.io": "2.1.6",
        "@types/socket.io-client": "1.4.33",
        "@types/tmp": "0.2.0",
        "@types/which": "1.3.2",
        "@typescript-eslint/eslint-plugin": "2.34.0",
        "@typescript-eslint/parser": "2.34.0",
        "all-contributors-cli": "6.14.2",
        "ava": "3.8.2",
        "eslint": "7.0.0",
        "eslint-config-prettier": "^6.11.0",
        "husky": "4.2.5",
        "lint-staged": "10.2.4",
        "npm-run-all": "4.1.5",
        "prettier": "2.0.5",
        "ts-loader": "7.0.4",
        "typescript": "3.9.3",
        "webpack": "4.43.0",
        "webpack-cli": "3.3.11"
    },
    "scripts": {
        "ci": "run-p lint test build",
        "test": "ava --verbose",
        "lint": "eslint 'src/**/*.ts'",
        "dev": "run-s watch",
        "build": "run-p build:ts build:client",
        "build:ts": "tsc",
        "build:client": "webpack --mode production",
        "watch": "run-p watch:ts watch:client",
        "watch:ts": "tsc -w",
        "watch:client": "webpack -w --mode development",
        "contributors:add": "all-contributors add",
        "contributors:generate": "all-contributors generate"
    },
    "lint-staged": {
        "*.{ts}": [
            "eslint --fix 'src/**/*.ts'"
        ],
        "*.{md}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-publish": "npm run ci"
        }
    },
    "ava": {
        "babel": true
    }
}
