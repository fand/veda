{
  "name": "veda",
  "main": "./lib/index",
  "version": "2.11.2",
  "description": "VJ / Live Coding environment with GLSL",
  "keywords": [],
  "activationCommands": {
    "atom-workspace": "veda:toggle"
  },
  "repository": "https://github.com/fand/veda",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "dependencies": {
    "atom-message-panel": "^1.3.0",
    "atom-package-deps": "^5.0.0",
    "execa": "^1.0.0",
    "express": "^4.16.4",
    "ffmpeg-static": "^2.4.0",
    "glslify": "^7.0.0",
    "glslify-import": "^3.1.0",
    "is-relative": "^1.0.0",
    "json5": "^2.1.0",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "osc-min": "^1.1.1",
    "pify": "^4.0.1",
    "rimraf": "^2.6.3",
    "signal-exit": "^3.0.2",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "three": "^0.102.1",
    "tmp": "^0.0.33",
    "vedajs": "^0.9.1",
    "which": "^1.3.1"
  },
  "package-deps": [
    "language-glsl",
    "linter-glsl",
    "autocomplete-glsl"
  ],
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.0",
    "@types/atom": "^1.31.0",
    "@types/execa": "^0.9.0",
    "@types/json5": "^0.0.30",
    "@types/lodash": "^4.14.120",
    "@types/mkdirp": "^0.5.2",
    "@types/pify": "^3.0.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/three": "^0.93.15",
    "@types/tmp": "^0.0.33",
    "@types/which": "^1.3.1",
    "all-contributors-cli": "^5.10.2",
    "ava": "^1.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.0",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.4",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "scripts": {
    "ci": "run-p lint test build",
    "test": "ava test --verbose",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "dev": "run-s watch",
    "build": "run-p build:ts build:client",
    "build:ts": "tsc",
    "build:client": "webpack --mode production",
    "watch": "run-p watch:ts watch:client",
    "watch:ts": "tsc -w",
    "watch:client": "webpack -w --mode development",
    "prepublish": "npm run ci",
    "precommit": "lint-staged",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "lint-staged": {
    "*.{ts}": [
      "tslint --fix",
      "git add"
    ],
    "*.{md}": [
      "prettier --write",
      "git add"
    ]
  },
  "ava": {
    "require": [
      "@babel/polyfill"
    ],
    "babel": {
      "testOptions": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  }
}
