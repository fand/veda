{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "baseUrl": ".",
        "rootDir": "./src",
        "lib": ["es2015", "es2017", "dom"],
        "sourceMap": true,
        "outDir": "lib",
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "declaration": true
    },
    "include": ["src"],
    "exclude": ["examples"]
}
